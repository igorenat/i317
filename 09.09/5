#include <iostream>
#include <math.h>

int main() {
    int A;
    std::cin>>A;
    int h = A / 3600;
    int m = (A%3600)/60;
    int s = A % 60;
    std::cout<<h<<":";
    if (m<10) std::cout<<"0";
    std::cout<<m<<":";
    if (s<10) std::cout<<"0";
    std::cout<<s;
    return 0;
}